<script>

  // quantity increment and decrement
  $(document).ready(function() {
    // Quantity increment
    $('.quantity-right-plus').click(function(e) {
      e.preventDefault();
      
      // Get the closest quantity input field
      var quantityInput = $(this).closest('.input-group').find('.input-number');
      var quantity = parseInt(quantityInput.val());
      var maxQuantity = parseInt(quantityInput.data('max-quantity'));
      // Get the max quantity from the input field

      // If quantity is less than max, increment it
      if (quantity < maxQuantity) {
        quantityInput.val(quantity + 1);
      }
    });

    // Quantity decrement
    $('.quantity-left-minus').click(function(e) {
      e.preventDefault();
      
      // Get the closest quantity input field
      var quantityInput = $(this).closest('.input-group').find('.input-number');
      var quantity = parseInt(quantityInput.val());
      
      // If quantity is greater than 1, decrement it
      if (quantity > 1) {
        quantityInput.val(quantity - 1);
      }
    });
  });



