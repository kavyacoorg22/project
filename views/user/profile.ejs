<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
        <p class="breadcrumbs">
          <span class="mr-2"><a href="/user/home">Home</a></span> 
          <% if(currentPage !== 'Home') { %>
              <span><%= currentPage %></span>
          <% } %>
      </p>
        <h1 class="mb-0 bread">Profile</h1>
      </div>
    </div>
  </div>
</div>


<div class="kp-wrapper">
  <div class="sidebar">
    <a href="#" class="active"><span>Profile</span></a>
    <a href="/user/address" ><span>Address</span></a>
    <a href="#"><span>Order</span></a>
    <a href="#"><span>Wallet</span></a>
    <a href="#" class="logout"><span>Logout</span></a>
</div>
  <div class="kp-container">
      <!-- Profile Section -->
      <div class="kp-profile-section">
          <div class="kp-profile-header">
              <div class="kp-avatar">
                  <svg viewBox="0 0 24 24">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
              </div>
              <div class="kp-profile-info">
                  <h1>Kavya BCR68</h1>
                  <p>kavyakopatti99@gmail.com</p>
              </div>
          </div>

          <div class="kp-form-grid">
              <div class="kp-form-group">
                  <label>Full Name</label>
                  <input type="text" class="kp-form-control" value="Kavya BCR68" disabled>
              </div>
              <div class="kp-form-group">
                  <label>Email</label>
                  <input type="email" class="kp-form-control" value="kavyakopatti99@gmail.com" disabled>
              </div>
              <div class="kp-form-group">
                  <label>Secondary Email</label>
                  <input type="email" class="kp-form-control" placeholder="Enter secondary email">
              </div>
              <div class="kp-form-group">
                  <label>Phone Number</label>
                  <input type="tel" class="kp-form-control" placeholder="Enter phone number">
              </div>
          </div>

          <div class="kp-button-container">
              <button class="kp-btn">Edit Account</button>
          </div>
      </div>

      <!-- Password Section -->
      <div class="kp-password-section">
          <h2 class="kp-section-title">Change password</h2>
          <div class="kp-form-grid">
              <div class="kp-form-group">
                  <label>Current Password</label>
                  <input type="password" class="kp-form-control" placeholder="Enter current password">
              </div>
              <div class="kp-form-group">
                  <label>New Password</label>
                  <input type="password" class="kp-form-control" placeholder="Enter new password">
              </div>
              <div class="kp-form-group">
                  <label>Confirm Password</label>
                  <input type="password" class="kp-form-control" placeholder="Confirm new password">
              </div>
          </div>

          <div class="kp-button-container">
              <button class="kp-btn">Change Password</button>
          </div>
      </div>
  </div>
</div>