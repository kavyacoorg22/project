<script>
    // Logout function
    function logout(event) {
      event.preventDefault();  // Prevent the default anchor tag behavior 
  
      fetch('/admin/logout', {
        method: 'POST',  // Use POST for logout
        credentials: 'same-origin'
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/admin/signup';  // Redirect after successful logout
        } else {
          alert('Logout failed!');
        }
      })
      .catch(error => {
        console.error('Error during logout:', error);
      });
    }
  
   // Function to set the active link
  function setActiveLink(event) {
    // Get all menu links
    const menuLinks = document.querySelectorAll('.menu-link');
    
    // Remove 'active' class from all links
    menuLinks.forEach(link => {
      link.classList.remove('active');
    });
    
    // Add 'active' class to the clicked link
    event.currentTarget.classList.add('active');
  }

  // Function to set active link on page load based on the current route
  function setActiveLinkOnPageLoad() {
    const path = window.location.pathname;  // Get the current URL path

    // Get all menu links
    const menuLinks = document.querySelectorAll('.menu-link');

    // Loop through each menu link and check if its href matches the current path
    menuLinks.forEach(link => {
      if (link.getAttribute('href') === path) {
        link.classList.add('active');
      }
    });
  }

  // Add event listeners to all menu links
  document.querySelectorAll('.menu-link').forEach(link => {
    link.addEventListener('click', setActiveLink);
  });

  // Set active link when the page loads
  window.onload = setActiveLinkOnPageLoad;




  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
const sidebar = document.querySelector('.sidebar');

mobileMenuToggle.addEventListener('click', () => {
    sidebar.classList.toggle('active');
});

// Close sidebar when clicking outside
document.addEventListener('click', (event) => {
    if (window.innerWidth <= 768) {
        if (!sidebar.contains(event.target) && 
            !mobileMenuToggle.contains(event.target)) {
            sidebar.classList.remove('active');
        }
    }
});
  </script>
  

