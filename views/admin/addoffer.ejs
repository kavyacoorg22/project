<div class="add-offer-container">
  <h2 class="add-offer-title">Add offer</h2>
  <p class="add-offer-description">create new offer for your store</p>

  <form class="add-offer-form">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="offer-name">Offer name</label>
        <input type="text" id="offer-name" class="form-control" placeholder="Enter offer name">
      </div>
      <div class="form-group col-md-6">
        <label for="discount-amount">Discount amount</label>
        <input type="number" id="discount-amount" class="form-control" placeholder="Enter amount">
      </div>
    </div>

   

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="offer-description">Description</label>
        <textarea id="offer-description" class="form-control" rows="3" placeholder="type offer detail here"></textarea>
      </div>
      <div class="form-group col-md-6">
        <label for="status">Status</label>
        <select id="status" class="form-control">
          <option value="active" selected>Active</option>
        </select>
      </div>
      
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="offer-product">Offer (product/category)</label>
        <select id="offer-product" class="form-control">
          <option value="select">Select</option>
        </select>
      </div>
      <div class="form-group col-md-6">
        <label for="applicable-product">Applicable (product/category)</label>
        <select id="applicable-product" class="form-control">
          <option value="select">Select</option>
        </select>
      </div>
     
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="activation-date">Activation Date</label>
        <input type="date" id="activation-date" class="form-control">
      </div>
      <div class="form-group col-md-6">
        <label for="expiry-date">Expiry Date</label>
        <input type="date" id="expiry-date" class="form-control">
      </div>
    </div>

    <div class="form-actions">
      <button type="button" class="btn btn-secondary">Cancel</button>
      <button type="submit" class="btn btn-primary">Create Offer</button>
    </div>
  </form>
</div>