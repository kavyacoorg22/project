<div class="container mt-4">
    <h2>Sales Report</h2>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="reportForm" method="GET">
                <div class="row g-3">
                    <div class="col-md-3">
                        <select class="form-select" name="timeRange" id="timeRange">
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                            <option value="yearly">Yearly</option>
                            <option value="custom">Custom Range</option>
                        </select>
                    </div>
                    
                    <div class="col-md-6 custom-date-range" style="display: none;">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <input type="date" class="form-control" name="startCustomDate" id="startDate">
                            </div>
                            <div class="col-md-6">
                                <input type="date" class="form-control" name="endCustomDate" id="endDate">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Generate Report</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h3><%= overallTotals.totalOrders %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <h3>₹<%= overallTotals.totalAmount.toFixed(2) %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Discounts</h5>
                    <h3>₹<%= overallTotals.totalDiscount.toFixed(2) %></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Download Buttons -->
    <div class="mb-4">
        <a href="/admin/sales/download-excel?startDate=<%= startDate %>&endDate=<%= endDate %>" class="btn btn-success me-2">
            Download Excel
        </a>
        <a href="/admin/sales/download-pdf?startDate=<%= startDate %>&endDate=<%= endDate %>" class="btn btn-danger">
            Download PDF
        </a>
    </div>

    <!-- Sales Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Orders</th>
                            <th>Total Amount</th>
                            <th>Discount</th>
                            <th>Net Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sales.forEach(day => { %>
                            <tr>
                                <td><%= day._id %></td>
                                <td><%= day.totalOrders %></td>
                                <td>₹<%= day.totalAmount.toFixed(2) %></td>
                                <td>₹<%= day.totalDiscount.toFixed(2) %></td>
                                <td>₹<%= (day.totalAmount - day.totalDiscount).toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('timeRange').addEventListener('change', function() {
        const customDateRange = document.querySelector('.custom-date-range');
        if (this.value === 'custom') {
            customDateRange.style.display = 'block';
        } else {
            customDateRange.style.display = 'none';
        }
    });
</script>